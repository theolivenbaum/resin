@{
    Layout = "~/Views/_LayoutStart.cshtml";
    ViewBag.Title = "CrawlCrawler";
}
<form action="/crawl/@Context.Request.QueryString" method="post">
    <div id="create-collection-form">
        <h1>Create your own web search engine</h1>
        <h2>Add sites</h2>
        <p>
            Add just a couple of sites to start with. You can always add more later and you can always remove those that you are no longer interested in.
        </p>
        <p>
            <label>
                <input type="radio" id="scope" name="scope" value="page" checked />
                Only this URL
            </label>
            <label>
                <input type="radio" id="scope" name="scope" value="directory" />
                This site or directory
            </label>
        </p>
        <p>
            <label>
                https:// <input type="text" placeholder="mysite.com" id="create-collection-form-url" name="url" /><input type="button" value="Add" />
            </label>
        </p>
        <p>
            <select multiple id="sitelist">
                <option>https://en.wikipedia.org</option>
            </select>
        </p>
        <p>
            <label>
                <input type="checkbox" name="agree" id="agree" value="yes" />
                I have read and agree to the <a href="/terms">terms</a>.
            </label>
            <input type="submit" value="Create search index" />
        </p>
    </div>

</form>